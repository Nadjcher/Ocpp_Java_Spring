{
    "name":  "evse-simulator-runner",
    "version":  "2.3.0",
    "description":  "EVSE Simulator Performance Runner - Executable Build",
    "main":  "launcher.js",
    "bin":  "launcher.js",
    "scripts":  {
                    "dev":  "node runner-http-api.js",
                    "start":  "node launcher.js",
                    "build:frontend":  "cd ../frontend \u0026\u0026 npm run build",
                    "build:exe":  "pkg . --targets node18-win-x64 --compress GZip --output dist/evse-simulator.exe",
                    "build:all":  "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --compress GZip",
                    "build":  "npm run build:frontend \u0026\u0026 npm run build:exe",
                    "prebuild":  "npm ci --omit=dev",
                    "postbuild":  "echo Build complete! Executable: dist/evse-simulator.exe"
                },
    "pkg":  {
                "scripts":  [
                                "launcher.js",
                                "runner-http-api.js"
                            ],
                "assets":  [
                               "../frontend/dist/**/*",
                               "data/**/*",
                               "tnr/**/*",
                               "ml-models/**/*"
                           ],
                "targets":  [
                                "node18-win-x64"
                            ],
                "outputPath":  "dist",
                "compress":  "GZip"
            },
    "dependencies":  {
                         "express":  "^4.18.2",
                         "cors":  "^2.8.5",
                         "body-parser":  "^1.20.2",
                         "ws":  "^8.14.2",
                         "multer":  "^1.4.5-lts.1",
                         "swagger-ui-express":  "^5.0.0",
                         "swagger-jsdoc":  "^6.2.8"
                     },
    "devDependencies":  {
                            "pkg":  "^5.8.1"
                        },
    "engines":  {
                    "node":  "\u003e=18.0.0"
                }
    "keywords":  [
                     "evse",
                     "ocpp",
                     "simulator",
                     "charging",
                     "performance"
                 ],
    "author":  "EVSE Team",
    "license":  "MIT",
    "type":  "module"
}
