# =============================================================================
# EVSE Simulator Frontend - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize as needed.
# NEVER commit .env files with real values!

# =============================================================================
# API Backend
# =============================================================================
# URL of the backend API (leave empty in dev to use Vite proxy)
VITE_API_URL=http://localhost:8887

# =============================================================================
# OCPP URLs
# =============================================================================
VITE_OCPP_TEST_URL=wss://evse-test.total-ev-charge.com/ocpp/WebSocket
VITE_OCPP_PP_URL=wss://evse-pp.total-ev-charge.com/ocpp/WebSocket
VITE_OCPP_PROD_URL=wss://evse.total-ev-charge.com/ocpp/WebSocket

# Default environment (test, pp, or prod)
VITE_DEFAULT_ENV=test

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features (default: true)
VITE_ENABLE_SMART_CHARGING=true
VITE_ENABLE_TNR=true
VITE_ENABLE_PERFORMANCE=true
VITE_ENABLE_ML=true

# =============================================================================
# Default Values
# =============================================================================
VITE_DEFAULT_CP_ID=SIMU-CP-001
VITE_DEFAULT_ID_TAG=TAG-001
